# Read `man 5 sway` for a complete reference.

### Variables ###

  set $mod Mod4

  set $lock loginctl lock-session
  set $term foot
  set $appmenu fuzzel --launch-prefix="swaymsg exec --" --terminal="$term"

### Keybindings ###

  bindsym --to-code {
    # general
    $mod+Return exec $term
    $mod+d exec $appmenu
    $mod+l exec $lock
    $mod+Shift+q kill
    $mod+Shift+c reload

    # sway
    $mod+Shift+e exec swaynag -t warning -m "Do you really want to exit Sway?" \
      -Z "Yes!" "swaymsg exit" \
      -s "No"
    $mod+Shift+p exec swaynag -t warning -m "Do you really want to power off?" \
      -Z "Poweroff" "systemctl poweroff" \
      -Z "Reboot" "systemctl reboot" \
      -s "No"

    # containers
    $mod+Left focus left
    $mod+Down focus down
    $mod+Up focus up
    $mod+Right focus right

    $mod+Shift+Left move left
    $mod+Shift+Down move down
    $mod+Shift+Up move up
    $mod+Shift+Right move right

    $mod+Shift+w layout stacking
    $mod+Shift+t layout tabbed
    $mod+Shift+s layout toggle split

    $mod+b splith
    $mod+v splitv

    $mod+f fullscreen
    $mod+Shift+space floating toggle
    $mod+space focus mode_toggle
    $mod+a focus parent

    $mod+Shift+minus move scratchpad
    $mod+minus scratchpad show

    # workspaces
    $mod+1 workspace 1
    $mod+2 workspace 2
    $mod+3 workspace 3
    $mod+4 workspace 4
    $mod+5 workspace 5
    $mod+6 workspace 6
    $mod+7 workspace 7
    $mod+8 workspace 8
    $mod+9 workspace 9
    $mod+0 workspace 10
    $mod+Tab workspace next

    $mod+Ctrl+Up move workspace to output up
    $mod+Ctrl+Left move workspace to output left
    $mod+Ctrl+Right move workspace to output right
    $mod+Ctrl+Down move workspace to output down

    $mod+Shift+1 move container to workspace 1
    $mod+Shift+2 move container to workspace 2
    $mod+Shift+3 move container to workspace 3
    $mod+Shift+4 move container to workspace 4
    $mod+Shift+5 move container to workspace 5
    $mod+Shift+6 move container to workspace 6
    $mod+Shift+7 move container to workspace 7
    $mod+Shift+8 move container to workspace 8
    $mod+Shift+9 move container to workspace 9
    $mod+Shift+0 move container to workspace 10

    $mod+shift+r mode "resize"
  }

  mode "resize" {
    bindsym --to-code {
      Left resize shrink width 10 px or 10 ppt
      Down resize grow height 10 px or 10 ppt
      Up resize shrink height 10 px or 10 ppt
      Right resize grow width 10 px or 10 ppt

      Return mode "default"
      Escape mode "default"
    }
  }

  # multimedia
  bindsym --locked XF86AudioLowerVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-
  bindsym --locked XF86AudioRaiseVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+
  bindsym --locked XF86AudioMute exec wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
  bindsym --locked XF86AudioMicMute exec wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle
  bindsym --locked XF86MonBrightnessDown exec brightnessctl set 10%-
  bindsym --locked XF86MonBrightnessUp exec brightnessctl set +10%
  bindsym --locked XF86AudioPlay exec playerctl play-pause
  bindsym --locked XF86AudioNext exec playerctl next
  bindsym --locked XF86AudioPrev exec playerctl previous

  # screenshot
  bindsym --release Print exec grimshot copy output && wl-paste | swappy -f -
  bindsym --release Shift+Print exec grimshot copy area && wl-paste | swappy -f -
  bindsym --release Alt+Print exec grimshot copy window && wl-paste | swappy -f -
  bindsym --release Ctrl+Print exec grimshot save output
  bindsym --release Ctrl+Shift+Print exec grimshot save area
  bindsym --release Ctrl+Alt+Print exec grimshot save window


### Appearance ###

  output * bg `xdg-user-dir PICTURES`/wallpapers/current fill

    set $nord00 #2e3440fa
    set $nord01 #3b4252fa
    set $nord02 #434c5efa
    set $nord03 #4c566afa

    set $nord04 #d8dee9
    set $nord05 #e5e9f0
    set $nord06 #eceff4

    set $nord07 #8fbcbb
    set $nord08 #88c0d0
    set $nord09 #81a1c1
    set $nord10 #5e81ac

    set $nord11 #bf616a
    set $nord12 #d08770
    set $nord13 #ebcb8b
    set $nord14 #a3be8c
    set $nord15 #b48ead

  bar {
    position top
    height 35
    workspace_min_width 30
    tray_output none
    status_command i3status-rs
    status_padding 0
    status_edge_padding 0
    colors {
      background $nord00
      focused_workspace $nord01 $nord01 $nord04
      active_workspace $nord00 $nord00 $nord04
      inactive_workspace $nord00 $nord00 $nord04
      urgent_workspace $nord11 $nord11 $nord06
      binding_mode $nord06 $nord06 $nord00
    }
  }

  #                       BORDER      BACKGROUND  TEXT        INDICATOR   CHILD_BORDER
  client.focused          $nord15     $nord00     $nord04     $nord15     $nord15
  client.focused_inactive $nord01     $nord01     $nord04     $nord01     $nord01
  client.unfocused        $nord01     $nord01     $nord04     $nord01     $nord01
  client.urgent           $nord11     $nord11     $nord06     $nord11     $nord11

  font pango:JetBrains Mono 10
  gaps inner 10
  gaps outer 0
  default_border pixel 4
  default_floating_border pixel 4
  titlebar_border_thickness 4
  titlebar_padding 8
  floating_modifier Alt

  for_window [app_id=".*"] border csd
  for_window [shell="xwayland"] title_format "X11 :: %title"


### Input ###

  input type:keyboard {
    xkb_layout us,ua
    xkb_options grp:caps_toggle,compose:paus,lv3:ralt_switch
  }

  input type:touchpad {
    dwt enabled                 # disable a touchpad while typing
    tap enabled                 # tap to click
    natural_scroll enabled      # natural, not reversed scroll
    scroll_factor 0.3
  }


### Customization ###

include "/etc/sway/config.d/*"
include "~/.config/sway/config.d/*"
include "~/.config/sway/config.`uname -n`"
