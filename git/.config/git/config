[alias]
	authors = shortlog -sne
	branches = branch -vv
	history = log --graph --decorate --oneline
	uncommit = reset --soft HEAD^

[color]
	ui = true

[commit]
	gpgSign = true

[diff]
	noprefix = true
	relative = true
	suppressBlankEmpty = true
	tool = nvimdiff
	guitool = meld
	algorithm = minimal

[difftool]
	prompt = false

[difftool "difft"]
	cmd = difft "$LOCAL" "$REMOTE"

[grep]
	lineNumber = true

[gpg]
	format = ssh

[gpg "ssh"]
	defaultKeyCommand = sh -c 'echo key::$(ssh-add -L)'
	allowedSignersFile = ~/.ssh/authorized_signatures
	revocationFile = ~/.ssh/revoked_signatures

[init]
	defaultBranch = master

[merge]
	tool = nvimdiff
	guitool = meld

[pull]
	ff = only

[push]
	gpgSign = if-asked

[tag]
	gpgSign = true

[user]
	name = Ihor Kalnytskyi
	email = ihor@kalnytskyi.com
