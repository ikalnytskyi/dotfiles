    gpgSign = if-asked

[pull]
    ff = only

[diff]
    noprefix = true

[difftool "nvim"]
    cmd = nvim -d $LOCAL $REMOTE

[mergetool "nvim"]
    cmd = nvim -d $MERGED

[difftool "vscode"]
    cmd = code --wait --diff $LOCAL $REMOTE

[mergetool "vscode"]
    cmd = code --wait $MERGED
